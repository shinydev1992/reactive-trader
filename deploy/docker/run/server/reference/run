#! /bin/bash

echo "Reference"

. ../../../../config

startCommand=`cat "../../../../../src/server/ReferenceInstance.bat"`
waitCommand="while true; do echo ping; sleep 60; done"

docker rm reference 2&> garbage

docker run -d --net=host                     \
     --name reference                        \
     adaptivetrader/servers:$vMajor.$vMinor.$vBuild                   \
     bash -c "$startCommand && $waitCommand" \
     > container_id 

rm garbage

echo "  started"
echo " "
